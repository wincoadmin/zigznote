// Comments on meetings/transcripts
model Comment {
  id            String    @id @default(uuid())
  content       String    @db.Text

  // What it's attached to
  meetingId     String    @map("meeting_id")
  meeting       Meeting   @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  // Transcript reference (optional - can be general meeting comment)
  segmentId     String?   @map("segment_id") // Links to transcript segment
  timestamp     Float?    // Seconds into meeting

  // Author
  userId        String    @map("user_id")
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Threading
  parentId      String?   @map("parent_id")
  parent        Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies       Comment[] @relation("CommentReplies")

  // Status
  isEdited      Boolean   @default(false) @map("is_edited")
  isResolved    Boolean   @default(false) @map("is_resolved")
  resolvedById  String?   @map("resolved_by_id")
  resolvedBy    User?     @relation("ResolvedComments", fields: [resolvedById], references: [id])
  resolvedAt    DateTime? @map("resolved_at")

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  mentions      CommentMention[]
  reactions     CommentReaction[]

  @@index([meetingId])
  @@index([userId])
  @@index([parentId])
  @@index([segmentId])
  @@map("comments")
}

model CommentMention {
  id          String   @id @default(uuid())
  commentId   String   @map("comment_id")
  comment     Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notified    Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([commentId, userId])
  @@index([userId])
  @@map("comment_mentions")
}

model CommentReaction {
  id          String   @id @default(uuid())
  commentId   String   @map("comment_id")
  comment     Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emoji       String   //    etc.
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([commentId, userId, emoji])
  @@index([commentId])
  @@map("comment_reactions")
}

// Annotations on transcript segments
model Annotation {
  id            String           @id @default(uuid())

  // What it's attached to
  meetingId     String           @map("meeting_id")
  meeting       Meeting          @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  // Transcript range
  startTime     Float            @map("start_time") // Start timestamp in seconds
  endTime       Float            @map("end_time")   // End timestamp in seconds
  segmentIds    String[]         @map("segment_ids") // Array of segment IDs covered

  // Content
  text          String?          @db.Text  // Optional note
  label         AnnotationLabel  @default(HIGHLIGHT)
  color         String           @default("#FEF3C7") // Yellow default

  // Author
  userId        String           @map("user_id")
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")

  @@index([meetingId])
  @@index([userId])
  @@index([label])
  @@map("annotations")
}

enum AnnotationLabel {
  HIGHLIGHT      // General highlight
  ACTION_ITEM    // Task to do
  DECISION       // Decision made
  QUESTION       // Question raised
  IMPORTANT      // Important point
  FOLLOW_UP      // Needs follow up
  BLOCKER        // Blocker identified
  IDEA           // Idea suggested
}

// In-app notifications
model Notification {
  id            String           @id @default(uuid())
  userId        String           @map("user_id")
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  type          NotificationType
  title         String
  message       String           @db.Text

  // Reference to related entity
  meetingId     String?          @map("meeting_id")
  commentId     String?          @map("comment_id")

  // Status
  read          Boolean          @default(false)
  readAt        DateTime?        @map("read_at")
  emailSent     Boolean          @default(false) @map("email_sent")

  // Metadata (JSON for flexibility)
  metadata      Json?

  createdAt     DateTime         @default(now()) @map("created_at")

  @@index([userId, read])
  @@index([userId, createdAt])
  @@map("notifications")
}

enum NotificationType {
  MENTION              // @mentioned in comment
  REPLY                // Reply to your comment
  MEETING_SHARED       // Meeting shared with you
  COMMENT_ADDED        // New comment on your meeting
  ANNOTATION_ADDED     // New annotation on your meeting
  PERMISSION_CHANGED   // Your access level changed
  MEETING_UPDATED      // Meeting you have access to was updated
}

// Activity log for team feed
model Activity {
  id            String         @id @default(uuid())

  // Who did it
  userId        String         @map("user_id")
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  // What they did
  action        ActivityAction

  // Context
  organizationId String        @map("organization_id")
  meetingId      String?       @map("meeting_id")
  commentId      String?       @map("comment_id")
  annotationId   String?       @map("annotation_id")

  // Details
  metadata       Json?

  createdAt      DateTime       @default(now()) @map("created_at")

  @@index([organizationId, createdAt])
  @@index([meetingId, createdAt])
  @@index([userId, createdAt])
  @@map("activities")
}

enum ActivityAction {
  MEETING_CREATED
  MEETING_UPDATED
  MEETING_SHARED
  MEETING_VIEWED
  COMMENT_ADDED
  COMMENT_REPLIED
  COMMENT_RESOLVED
  ANNOTATION_ADDED
  ANNOTATION_UPDATED
  MEMBER_JOINED
  PERMISSION_CHANGED
}

