# ============================================
# zigznote Production Environment
# ============================================
# Copy this file to .env.prod and fill in your values

# Database
POSTGRES_USER=zigznote
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=zigznote
DATABASE_URL=postgresql://zigznote:your-secure-password-here@postgres:5432/zigznote

# Redis
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379

# Clerk Authentication
CLERK_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxx

# API Keys
RECALL_API_KEY=xxx
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
DEEPGRAM_API_KEY=xxx

# Stripe Billing
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Storage (S3 or MinIO)
S3_BUCKET=zigznote-prod
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=xxx
S3_ENDPOINT=  # Leave empty for AWS S3, set for MinIO/R2

# Public URLs
NEXT_PUBLIC_API_URL=https://api.zigznote.com
NEXT_PUBLIC_APP_URL=https://app.zigznote.com

# Encryption (32-character key)
ENCRYPTION_KEY=your-32-character-encryption-key!

# Alerting (optional)
ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@zigznote.com
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Google OAuth (optional, for calendar integration)
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
